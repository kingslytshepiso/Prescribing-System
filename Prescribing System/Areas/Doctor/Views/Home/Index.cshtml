@model IndexViewModel
@{
    ViewData["Title"] = "Home";

}
<div class="illus-group-row">
    <div class="illustration-block illus-large box-rowed box-centered">
        <form asp-controller="Patient" asp-action="PatientResults" method="get">
            <div class="form-group row">
                <div class="col">
                    <div class="col"><label>Enter Patient ID:</label></div>
                    <div class="col">
                        <input class="form-control" type="number" minlength="13" maxlength="13" name="idNumber" required />
                    </div>
                </div>
            </div>
            <div class="box-columned">
                <div class="col box-columned box-centered">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
<hr />
<div class="illus-group-col">
    <div class="illus-group-row box-centered flex-row">
        <a asp-controller="Prescription" asp-action="Index" class="block-link">
            <div class="illustration-block illustration-pharmacy illus-medium">

            </div>
            <div class="illus-title illus-title-medium">
                <div>
                    <h4>Prescriptions</h4>
                </div>
            </div>
        </a>
    </div>
    <div class="illus-group-row box-centered flex-row">
        <a asp-controller="Home" asp-action="Profile" class="block-link">
            <div class="illustration-block illustration-pharmacist illus-medium">

            </div>
            <div class="illus-title illus-title-medium">
                <div>
                    <h4>Profile</h4>
                </div>
            </div>
        </a>
    </div>
</div>