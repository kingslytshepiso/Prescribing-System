@model ChronicMedication
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form class="form-critical" asp-controller="ChronicMedication" asp-action="Edit">
    <input asp-for="ChronicMedID" type="hidden" value="@Model.ChronicMedID" />
    <div class="form-group row">
        <div class="col-8"><label>select Chronic Disease</label></div>
        <div class="col-12">
            <select asp-for="MedicationID"
                    asp-items="@(new SelectList(ViewBag.Medications, "MedicationID",
                                        "Name"))" class="form-control">
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="button" onclick="history.back()" class="btn">Cancel</button>
        </div>
        <div class="col">
            <div class="box-items-from-right">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </div>

</form>
