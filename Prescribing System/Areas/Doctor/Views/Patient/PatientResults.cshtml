    <div class="box-columned">
        <table class="table table-boarderless mr-10">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="underlined-text">@Model.Patient.IdNumber</td>
                    </tr>
                    <tr>
                        <td>Name:</td>
                        <td class="underlined-text">@Model.Patient.LastName @Model.Patient.FirstName</td>
                    </tr>
                    <tr>
