@model ChronicDisease
@{
    ViewData["Title"] = "Edit";
    DoctorDbContext doctorDbContext = new DoctorDbContext();
    ViewBag.Diseases = doctorDbContext.GetAllDiseases();
}

<h1>Edit</h1>
<form class="form-critical" asp-controller="ChronicDisease" asp-action="Edit">
    <input asp-for="ChronicDiseaseID" type="hidden" value="@Model.ChronicDiseaseID"/>
    <div class="form-group row">
        <div class="col-8"><label>select Ccronic disease</label></div>
        <div class="col-12">
            <select asp-for="DiseaseID" class="form-control">
                <option value="" disabled selected>Select Chronic Diseases</option>
                @foreach (Disease p in ViewBag.Diseases)
                {
                    <option value="@p.DiseaseID">@p.DiseaseName</option>
                }

            </select>
        </div>
    </div>
    <div class="form-group col">
        <div class="col-8"><label>Choose Diagnos Date *</label></div>
        <div class="col-12">
            <input type="date" asp-for="Date" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="button" onclick="history.back()" class="btn">Cancel</button>
        </div>
        <div class="col">
            <div class="box-items-from-right">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </div>

</form>
