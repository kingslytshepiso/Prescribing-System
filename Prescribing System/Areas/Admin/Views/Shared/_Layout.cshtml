<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Custom.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container m-sm-0 m-md-auto">
                <a class="navbar-brand" asp-area="" asp-controller="Home"
                   asp-action="Index">
                    <img width="55" height="40" src="~/images/logo.png.svg" />
                </a>
                <div class="navbar-nav navbar-expand mr-sm-5 ml-4">
                    <form asp-controller="Home" asp-action="Search" method="get" class="box-columned pl-4 ml-4">
                        <div class="box-columned box-centered">
                            <input type="text" min="3" maxlength="20" name="keyword" placeholder="Search" />
                        </div>
                        <div class="box-columned box-centered">
                            <button type="submit" class="btn btn-outline-secondary"><img width="20" height="20" src="~/icons/search-icon.png" /></button>
                        </div>
                    </form>
                </div>
                <nav class="navbar-nav navbar-expand mr-sm-5 mr-md-0 ">
                    <div class="navbar-nav navbar-right mb-sm-1 pt-1 mw-100">
                        <div class="dropdown">
                            <button type="button" class="btn btn-primary s_top-right_drop-btn"
                                    id="navDropdown" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                <span class="">Menu</span>
                            </button>
                            <span class="badge">Admin</span>
                            <div class="dropdown-menu">
                                <div class="dropdown-header">
                                    <h3>Admin</h3>
                                </div>
                                <a class="dropdown-item"
                                   asp-controller="Home" asp-action="Index">Home</a>
                                <a class="dropdown-item"
                                   asp-controller="User"
                                   asp-action="Index">
                                    Users
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="ActiveIngredient"
                                   asp-action="Index">
                                    Active-Ingredients
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="ConditionDiagnosis"
                                   asp-action="Index">
                                    Condition Diagnosis(ICD-10)
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="ContraIndication"
                                   asp-action="Index">
                                    Contra-Indications
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="Doctor"
                                   asp-action="Index">
                                    Doctors
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="MedicalPractice"
                                   asp-action="Index">
                                    Medical Practices
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="Medication"
                                   asp-action="Index">
                                    Medication
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="MedicationInteraction"
                                   asp-action="Index">
                                    Medication Interactions
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="Pharmacy"
                                   asp-action="Index">
                                    Pharmacies
                                </a>
                                <a class="dropdown-item"
                                   asp-controller="Pharmacist"
                                   asp-action="Index">
                                    Pharmacists
                                </a>
                                <a class="dropdown-item"
                                   asp-area="" asp-controller="Home"
                                   asp-action="About">
                                    About
                                </a>
                                <form method="post" asp-action="Logout"
                                      asp-controller="Account"
                                      asp-area="">
                                    <input type="submit" value="Log Out"
                                           class="dropdown-item logout-item" />
                                </form>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </nav>
    </header>
    <div class="container container-after-nav bg-transparent">
        <div class="adm_layout col">
            <div class="adm_main col b_boxed bg-light">
                <main role="main" class="pb-3 bg-transparent">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - E-P - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
