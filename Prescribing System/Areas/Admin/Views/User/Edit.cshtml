@model User
@{ 
    ViewData["Title"] = Model.Username;
}
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form class="form-critical" asp-controller="User" asp-action="Edit" method="post">
        <div class="form-group row">
            <div class="form-group col">
                <div class="col-8"><label>User ID:</label></div>
                <div class="col-12">
                    <input asp-for="UserId" value="@Model.UserId" class="form-control" disabled />
                </div>
            </div>
            <input asp-for="UserId" type="hidden" value="@Model.UserId" />
            <div class="form-group col">
                <div class="col-8"><label>Username:</label></div>
                <div class="col-12">
                    <input asp-for="Username" value="@Model.Username" class="form-control" disabled />
                </div>
                <div class="col">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <input asp-for="Username" type="hidden" value="@Model.Username" />
        </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="col-8"><label>Password:</label></div>
                <div class="col-12">
                    <input asp-for="Password" value="@Model.Password" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col">
                <div class="col-8"><label>Confirm Password:</label></div>
                <div class="col-12">
                    <input asp-for="ConfPassword" value="@Model.Password" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="ConfPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="col-12">
                    <select asp-for="Role" class="form-control">
                        <option value="">none</option>
                        <option value="Doctor">Doctor</option>
                        <option value="Patient">Patient</option>
                        <option value="Pharmacist">Pharmacist</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="col">
                    <button id="btn_critical" type="submit" class="form-control btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </form>
</div>
