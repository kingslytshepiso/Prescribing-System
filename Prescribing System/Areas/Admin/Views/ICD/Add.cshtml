@model ICD_Code
@{
    ViewData["Title"] = "Add ICD Code";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-controller="ICD" asp-action="Add" method="post">
    <div class="form-group row">
        <div class="col-8"><label>Code</label></div>
        <div class="col-12">
            <input asp-for="Code" type="text" class="form-control" />
        </div>
        <div class="col-12">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-8"><label>Description</label></div>
        <div class="col-12">
            <textarea asp-for="Description" class="form-control">

            </textarea>
        </div>
        <div class="col-12">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
        </div>
        <div class="col">
            <div class="box-items-from-right">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</form>
