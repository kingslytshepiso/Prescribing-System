@model ConditionDiagnosis
@{
    ViewData["Title"] = "Add a condition diagnosis";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-controller="ConditionDiagnosis" asp-action="Add">
    <div class="form-group row">
            <div class="col-8"><label>Code:</label></div>
            <div class="col-12">
                <select asp-for="Code" asp-items="@(new SelectList(ViewBag.Codes, "Code", "Code"))"
                class="form-control">

                </select>
            </div>
        </div>
    <div class="form-group row">
        <div class="col-8"><label>Description:</label></div>
        <div class="col-12">
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="col">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-8"><label>Patient:</label></div>
        <div class="col-12">
            <select asp-for="PatientID" class="form-control">
                @foreach(PatientUser p in ViewBag.Patients){
                    <option value="@p.PatientId">@(p.LastName+" "+p.FirstName+"("+p.IdNumber+")")</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
        </div>
        <div class="col">
            <div class="box-items-from-right">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</form>

