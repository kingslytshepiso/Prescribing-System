    <div class="form-group row">
            <div class="form-group col">
                <div class="col-8"><label>First Name:</label></div>
                <div class="col-12">
                    <input asp-for="User.FirstName" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="User.FirstName"
                      class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col">
                <div class="col-8"><label>Last Name:</label></div>
                <div class="col-12">
                    <input asp-for="User.LastName" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="User.LastName"
                      class="text-danger"></span>
                </div>
            </div>
    </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="col-8"><label>Email Address:</label></div>
                <div class="col-12">
                    <input asp-for="User.EmailAddress" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="User.EmailAddress"
                      class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col">
                <div class="col-8"><label>Contact Number:</label></div>
                <div class="col-12">
                    <input asp-for="User.ContactNumber" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="User.ContactNumber"
                      class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="col-8"><label>Province:</label></div>
                <div class="col-12">
                    <select id="slctProvince" asp-for="User.ProvinceID"
                        asp-items="@(new SelectList(ViewBag.Provinces, "ProvID",
                                        "Name"))"
                        class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group col">
                <div class="col-8"><label>City:</label></div>
                <div class="col-12">
                    <select id="slctCities" asp-for="User.CityID"
                        asp-items="@(new SelectList(ViewBag.Cities, "CityID",
                                        "Name"))"
                        class="form-control">
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="col-8"><label>Suburb:</label></div>
                <div class="col-12">
                    <select id="slctSuburbs" asp-for="User.SuburbID"
                        asp-items="@(new SelectList(ViewBag.Suburbs, "SuburbID",
                                        "Name"))"
                        class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group col">
                <div class="col-8"><label>Address Line:</label></div>
                <div class="col-12">
                    <textarea asp-for="User.AddressLine1" class="form-control"></textarea>
                    <span class="text-secondary">Street address, P.O box, Company name, c/o</span>
                </div>
                <div class="col">
                    <span asp-validation-for="User.AddressLine1"
                      class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="col-8"><label>Password:</label></div>
                <div class="col-12">
                    <input asp-for="UserDetails.Password" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="UserDetails.Password"
                      class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col">
                <div class="col-8"><label>Confirm Password:</label></div>
                <div class="col-12">
                    <input asp-for="UserDetails.ConfPassword" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="UserDetails.ConfPassword"
                      class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col">
                <div class="col-8"><label>Medical Practice:</label></div>
                <div class="col-12">
                    <select asp-for="User.MedPracId"
                        asp-items="@(new SelectList(ViewBag.MedPracs, "MedPracId",
                                        "Name"))"
                        class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group col">
                <div class="col-8"><label>Qualification:</label></div>
                <div class="col-12">
                    <select asp-for="User.HighestQual"
                        class="form-control">
                        <option value="Philosopher">PHD(Philosphy)</option>
                        <option value="Master">Masters</option>
                        <option value="Honours">Honorary</option>
                        <option value="Bachelors">Bachelors degree</option>
                        <option value="Diploma">Diploma</option>
                    </select>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="UserDetails.Role" value="Doctor" />
        <div class="form-group row">
            <div class="col">
                <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
            </div>
            <div class="col">
                <div class="box-items-from-right">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
</form>
