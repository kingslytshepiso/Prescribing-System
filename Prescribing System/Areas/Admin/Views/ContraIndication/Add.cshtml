@model ContraIndication
@{
    ViewData["Title"] = "Add a contra indication";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-controller="ContraIndication" asp-action="Add">
    <div class="form-group row">
            <div class="col-8"><label>Active Ingredient:</label></div>
            <div class="col-12">
                <select asp-for="ActiveIngredientID" asp-items="@(new SelectList(ViewBag.ActiveIngredients, "ActiveIngreID", "Name"))"
                class="form-control">

                </select>
            </div>
        </div>
    <div class="form-group row">
        <div class="col-8"><label>Disease:</label></div>
            <div class="col-12">
                <select asp-for="DiseaseID" asp-items="@(new SelectList(ViewBag.Diseases, "DiseaseID", "Name"))"
                    class="form-control">
                </select>
            </div>
    </div>
    <div class="form-group row">
        <div class="col-8"><label>Patient:</label></div>
        <div class="col-12">
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="col">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
        </div>
        <div class="col">
            <div class="box-items-from-right">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</form>
