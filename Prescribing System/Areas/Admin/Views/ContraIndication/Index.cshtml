@model CntrIndViewModel
@{
    ViewData["Title"] = "Contra Indications";
}
<div class="box-columned box-spaced-between">
    <div class="">
        <a asp-controller="ContraIndication" asp-action="Add"
        class="btn btn-primary">Add</a>
    </div>
    <div class="">
        <button type="button" class="btn btn-primary dropdown-toggle"
                id="sortDropdownBtn" data-toggle="dropdown"
                aria-expanded="false">
            Sort by
        </button>
        <ul class="dropdown-menu" aria-labelledby="sortDropdownBtn">
            <li class="dropdown-item">
                <a asp-controller="ContraIndication" asp-action="Index" asp-route-sortBy="none">
                    -----
                </a>
            </li>
            <li class="dropdown-item">
                <a asp-controller="ContraIndication" asp-action="Index" asp-route-sortBy="activeingredient">
                    Active Ingredient
                </a>
            </li>
            <li class="dropdown-item">
                <a asp-controller="ContraIndication" asp-action="Index" asp-route-sortBy="disease">
                    Disease
                </a>
            </li>
            <li class="dropdown-item">
                <a asp-controller="ContraIndication" asp-action="Index" asp-route-sortBy="description">
                    Description
                </a>
            </li>
        </ul>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Ingredient</th>
            <th>Disease</th>
            <th>Description</th>
            <th></th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (Model.OverallCount > 0)
        {
            var i = 1;
            @foreach (var cntrInd in Model.DataList)
            {
                <tr>
                    <td>@i</td>
                    <td>@cntrInd.ActiveIngredientName</td>
                    <td>@cntrInd.DiseaseName</td>
                    <td>@cntrInd.Description</td>
                    <td colspan="1">
                        <a class="btn btn-primary" asp-controller="ContraIndication"
                   asp-action="Edit" asp-route-id="@cntrInd.ContraIndicaID">
                            <span><img class="utility-icon" src="~/icons/edit.png" /></span>
                        </a>
                    </td>
                    <td colspan="1">
                        <form asp-controller="ContraIndication" asp-action="Delete"
                      asp-route-id="@cntrInd.ContraIndicaID" method="post"
                      class="form-critical">
                            <button class="btn btn-primary" type="submit">
                                <span><img class="utility-icon" src="~/icons/delete.png" /></span>
                            </button>
                        </form>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td>Empty</td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (Model.OverallCount > 0)
    {
        <nav aria-label="Page navigation example" class="box-columned box-spaced-between">
            <div class="box-rowed box-centered">
                <strong>Showing @Model.CurrentPage of @Model.OverallCount</strong>
            </div>
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1? "disabled": "")">
                    <a class="page-link" asp-controller="ContraIndication" asp-action="Index"
                   asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-sortBy="@Model.Sort"
                   >Previous</a>
                </li>
                @for (int i = 1; i <= Model.OverallCount; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i?"active": "")">
                        <a class="page-link" asp-controller="ContraIndication" asp-action="Index"
                   asp-route-pageNumber="@i" asp-route-sortBy="@Model.Sort">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.OverallCount ? "disabled": "")">
                    <a class="page-link" asp-controller="ContraIndication" asp-action="Index"
                   asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-sortBy="@Model.Sort">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
