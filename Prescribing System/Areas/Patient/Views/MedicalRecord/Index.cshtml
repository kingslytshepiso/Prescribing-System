@model MedicalHistoryViewModel
@{
    ViewData["Title"] = "My Health Record";
}

<h1>My Health Record</h1>
<div class="m-4">
    @if (!(Model.PatientDiseases.Count > 0))
{
    <div>
        <h4 class="text-info">
            patient has not loaded health record yet.
        </h4>
    </div>
}
else
{
    var count = 1;
    <table class="table table-bordered m-0">
        <thead>
            <tr>
                <th class="text-center" colspan="3">Known Chronic Diseases</th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>No:</th>
                <th>Name</th>
                <th>Diagnosis Date</th>
            </tr>
        </thead>
    
            <tbody>
                @foreach (PatientDisease c in Model.PatientDiseases)
                {

                    <tr>
                        <td>@count</td>
                        <td>@c.GetChronicDiseases().Name</td>
                        <td>@c.Date</td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    }
</div>
<div class="m-4">
    @if (!(Model.PatientMedications.Count > 0))
{
    <div>
        <h4 class="text-info">
            patient has not loaded health record yet.
        </h4>
    </div>
}
else
{
    var count = 1;
    <table class="table table-bordered m-0">
        <thead>
            <tr>
                <th class="text-center" colspan="3">Chronic Medictions</th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>No:</th>
                <th>Name</th>
                <th>Diagnosis Date</th>
            </tr>
        </thead>
            <tbody>
                @foreach (PatientMedication c in Model.PatientMedications)
                {

                    <tr>
                        <td>@count</td>
                        <td>@c.GetMedications().Name</td>
                        <td>@c.Date</td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
}
</div>
