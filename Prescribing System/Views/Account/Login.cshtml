@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="b_h_centered">
    <div>
        <h2 class="text-center">
            Login
        </h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div class="form-group row">
                <div class="col-md-12 col-sm-12"><label>Username/ID:</label></div>
                <div class="col-md-12 col-sm-12">
                    <input asp-for="Username" class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12 col-sm-8"><label>Password:</label></div>
                <div class="col-md-12 col-sm-12">
                    <input type="password" asp-for="Password"
                           class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-0 col-sm-8">
                    <input type="checkbox" title="Remember Me" asp-for="RememberMe"
                           class="form-check" />
                    <label asp-for="RememberMe">Remember Me:</label>
                </div>
            </div>
            <div class="form-group col">
                <div class="col">
                    <div class="box-columned box-centered w-100">
                        <div class="justify-content-center w-100">
                            <button type="submit" class="btn btn-primary w-100">Log In</button>
                        </div>
                    </div>
                </div>
                <div class="col p-0">
                    <div class="box-columned box-centered">
                        forgot password?
                        <a class="text-danger" asp-area="" asp-controller="Account" asp-action="ForgetPassword">Reset a pasword</a>
                    </div>
                    <div class="box-columned box-centered">
                        Not registered?
                        <a class="text-info" asp-area="" asp-controller="Account" asp-action="RegisterView">Register as a new user</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>